        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>1.4.0.RELEASE</version>
                <configuration>
                    <!--<mainClass>cn.vfinance.open.gateway.alipay.ApplicationContext</mainClass>-->
